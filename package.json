  },
  "contributors": [
    {
      "name": "ChaYoung You",
      "url": "https://github.com/yous"
    }
  ],
  "scripts": {
    "dev": "run-p dev:webpack serve",
    "dev:webpack": "cross-env NODE_ENV=development npm run webpack:userscript -- --watch",
    "build": "cross-env NODE_ENV=production npm run webpack:userscript",
    "build:dev": "cross-env NODE_ENV=development npm run webpack:userscript",
    "test": "sucrase-node ./src/test/index.ts",
    "test:health-check": "run-s webpack:health-check test:health-check:node",
    "test:health-check:node": "sucrase-node ./src/test/health-check/index.ts",
    "webpack:userscript": "webpack --config ./dev/userscript.webpack.config.ts --require sucrase/register/ts",
    "webpack:health-check": "webpack --config ./dev/health-check.webpack.config.ts --require sucrase/register/ts",
    "serve": "serve ./dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/disjukr/just-news.git"
  },
  "bugs": {
    "url": "https://github.com/disjukr/just-news/issues"
  },
  "license": "MIT",
  "main": "just-news.user.js",
  "keywords": [
    "just",
    "news",
    "userscript"
  ],
  "engines": {
    "node": ">= 9.5.0"
  },
  "dependencies": {
    "jquery": "^3.4.0",
    "moment": "^2.24.0",
    "preact": "^10.0.0-beta.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jquery": "^3.3.29",
    "@types/node": "^9.6.47",
    "@types/puppeteer": "^1.12.3",
    "@types/showdown": "^1.9.3",
    "@types/terser-webpack-plugin": "^1.2.1",
    "@types/webpack": "^4.4.27",
    "babel-loader": "^8.0.5",
    "babel-plugin-macros": "^2.5.1",
    "codegen.macro": "^3.0.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^1.14.0",
    "serve": "^11.0.2",
    "showdown": "^1.9.0",
    "style-loader": "^0.23.1",
    "sucrase": "^3.10.1",
    "terser-webpack-plugin": "^1.2.3",
    "typescript": "^3.4.4",
    "webpack": "^4.30.0",
    "webpack-command": "^0.2.1"
  },
  "private": true
}
